generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id  Int @id @default(autoincrement())
  name  String
  phone String @unique
  password String
}

model Memberships {
  id  Int @id @default(autoincrement())
  name  String
  phone String
  cardNumber  String @unique
  cardType  String
  issueDate DateTime
  remainingSoups  Int
  soupRecords SoupRecord[]
}

model Soup {
  id  Int @id @default(autoincrement())
  name  String
  type  String
  soupRecords SoupRecord[]
}

model SoupRecord {
  id           Int          @id @default(autoincrement())
  drinkTime    DateTime

  membershipId Int
  membership   Memberships  @relation(fields: [membershipId], references: [id])

  soupId       Int
  soup         Soup         @relation(fields: [soupId], references: [id])
}